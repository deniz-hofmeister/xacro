<!-- Define a property (variable) for radius -->
<xacro:property name="wheel_radius" value="0.05"/>

<!-- Use the property in a link -->
<link name="wheel_link">
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.02" radius="${wheel_radius}"/>
    </geometry>
  </collision>
</link>
