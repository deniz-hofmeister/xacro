<!-- Define a macro that creates a link with a specified name and mass -->
<xacro:macro name="make_link" params="link_name mass">
  <link name="${link_name}">
    <inertial>
      <mass value="${mass}" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>
</xacro:macro>

<!-- Now invoke the macro twice -->
<xacro:make_link link_name="link1" mass="1.0"/>
<xacro:make_link link_name="link2" mass="2.0"/>
