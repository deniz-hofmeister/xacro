<?xml version="1.0" encoding="UTF-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
 <xacro:macro params="name mass:=1.0" name="link">
  <link name="${name}">
   <inertial>
    <mass value="${mass}"/>
   </inertial>
  </link>
 </xacro:macro>
 <xacro:link name="link1"/>
 <xacro:link name="link2" mass="2.0"/>
</robot>
